{
  "name": "api-v1",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/Mr-GaoYu/API.git",
  "author": "Mr_GaoYu <Mr_GaoYu@163.com>",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"tsc -w\" \"babel src --watch --out-dir lib --extensions .ts,.tsx\" -n 'tsc,babel' -k",
    "build": "tsc && babel src --out-dir lib --extensions .ts,.tsx && webpack",
    "test": "jest --config=jest.config.json",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "yarn run eslint . --fix --quiet --ext .js,.ts,.tsx",
    "typecheck": "tsc --noEmit true --emitDeclarationOnly false"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "npm-dts-webpack-plugin": "^1.3.6",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "webpack": "^5.16.0",
    "webpack-cli": "^4.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --ext .js,.ts,.tsx",
      "git add"
    ],
    ".{ts,tsx}": [
      "tsc -p tsconfig.json --noEmit true --emitDeclarationOnly false"
    ]
  }
}
